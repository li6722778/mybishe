<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/contentbg"
    android:descendantFocusability="blocksDescendants" >

    <ImageButton
        android:id="@+id/order_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/maptitlebtn"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:padding="10dp"
        android:src="@drawable/delete_24"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/order_wancheng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/maptitlebtn"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:padding="10dp"
        android:src="@drawable/finishedorder"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/order_weiwancheng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/maptitlebtn"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:padding="10dp"
        android:src="@drawable/unfinishedorder"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <ImageButton
            android:id="@+id/order_yiguoqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/maptitlebtn"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:padding="10dp"
            android:src="@drawable/expiredorder"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/jihuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/maptitlebtn"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:padding="10dp"
            android:src="@drawable/activityorder"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/order_delete"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/order_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单号"
            android:textColor="@color/listdarkfont"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_item_parkname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="停车场"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_item_parktype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="停车场计费方式"
            android:textColor="@color/gray_dlight"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/order_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2015-12-12"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/order_start_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:src="@drawable/timebim_s"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>