<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainbg" >

    <LinearLayout
        android:id="@+id/youhui_progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_loading"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/chewei_all_relay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" >

        <com.mc.parking.client.layout.VerticalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mainbg" >

                <RelativeLayout
                    android:id="@id/id_stickynavlayout_topview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/contentbg"
                    android:paddingBottom="15dp" >

                    <FrameLayout
                        android:id="@+id/packdetail_img_frame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp" >

                        <ImageView
                            android:id="@+id/chewei_packdetail_img"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@color/black"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/imglistdemo" />

                        <TextView
                            android:id="@+id/packdetail_img_number"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="right|bottom"
                            android:background="@color/black"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="60dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/packdetail_img_frame"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/chewei_parkname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/parkdetail_title"
                            android:textColor="@color/deep_gray"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/chewei_parkdistance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="left"
                            android:text="兴华南路57号"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/chewei_light_img"
                        android:layout_width="40dp"
                        android:layout_height="80dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/start" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_stickynavlayout_topview"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="60dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:text="开始接单"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="停止接单"
                        android:textSize="18dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/psb_hora_rela"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relative_text" >

                    <com.mc.parking.admin.adrm.PhasedSeekBar
                        android:id="@+id/psb_hora"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="60dp"
                        android:background="@color/mainbg"
                        app:phased_anchor_height="@dimen/test_anchor_size"
                        app:phased_anchor_width="@dimen/test_anchor_size"
                        app:phased_base_background="@drawable/newmybar"
                        app:phased_base_margin_bottom="@dimen/test_bottom_padding"
                        app:phased_base_margin_left="@dimen/test_left_padding"
                        app:phased_base_margin_right="@dimen/test_right_padding"
                        app:phased_base_margin_top="@dimen/test_top_padding"
                        app:phased_item_height="@dimen/test_item_size"
                        app:phased_item_width="@dimen/test_item_size"
                        app:phased_mode="horizontal" />

                    <RelativeLayout
                        android:id="@+id/myrelate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/psb_hora"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/contentbg"
                        android:gravity="center_horizontal" >

                        <LinearLayout
                            android:id="@+id/ordernotcomeLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/ordernotcome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="0dp"
                                android:text="0"
                                android:textColor="@color/blue"
                                android:textSize="40dp" >

                            </TextView>

                            <TextView
                                android:id="@+id/ordernotcomes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="已支付未进场"
                                android:textSize="16dp" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/ordernotcomeLayout"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/ordernotout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="0dp"
                                android:layout_toRightOf="@id/ordernotcome"
                                android:text="0"
                                android:textColor="@color/orange"
                                android:textSize="40dp" >

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="已进场未出场"
                                android:textSize="16dp" >
                            </TextView>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/id_cheweinumb_Rela"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/myrelate"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/id_chewei_stop_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="停止接单"
                            android:textSize="20sp"
                            android:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/id_cheweinumb_line"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/bg_maincontent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:id="@+id/container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="32sp"
                                android:orientation="horizontal" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="32sp"
                                    android:layout_marginTop="22sp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:id="@+id/offine_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="15dp"
                                        android:gravity="center"
                                        android:text="@string/admin_shenyu"
                                        android:textColor="@color/grey"
                                        android:textSize="20sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:visibility="gone" >

                                    <TextView
                                        android:id="@+id/chewei_cheweinumber"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="15dp"
                                        android:text="107"
                                        android:textColor="@color/blue"
                                        android:textSize="50sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:id="@+id/parkdetail_line"
                                android:layout_width="fill_parent"
                                android:layout_height="2px"
                                android:layout_below="@id/packdetail_img_frame"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@color/gray_whitenew"
                                android:visibility="gone" >
                            </View>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="32sp"
                                android:orientation="horizontal"
                                android:visibility="gone" >

                                <TextView
                                    android:id="@+id/chewei_fabuChewei"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:onClick="true"
                                    android:text="+"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="0dp"
                                    android:background="@color/gray_whitenew" >
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/chewei_reduceChewei"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:onClick="true"
                                    android:text="—"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/chewei_scan_Relat"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/id_cheweinumb_Rela"
                        android:layout_margin="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_maincontent"
                        android:gravity="center_vertical"
                        android:onClick="true"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/bank_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="5dp"
                            android:text="停车确认"
                            android:textColor="@color/grey"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/youhui_scan_image"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/imag_scan"
                            android:clickable="true"
                            android:src="@drawable/scan"
                            android:visibility="visible" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pay_info_mode"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/chewei_scan_Relat"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/contentbg"
                        android:onClick="true"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/show_pay_info"
                            android:text="收费详情"
                            android:textColor="@color/grey"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/show_pay_info"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="-"
                            android:textSize="15dp"
                            android:visibility="visible" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/pay_info_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pay_info_mode"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/contentbg"
                        android:clickable="false"
                        android:focusable="false"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:id="@+id/payradioButton1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="  计时收费"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal" >

                            <Spinner
                                android:id="@+id/spinner1"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1.2"
                                android:entries="@array/degrees"
                                android:gravity="center"
                                android:spinnerMode="dropdown" />

                            <EditText
                                android:id="@+id/id_getimage_parktime"
                                style="@style/getimage_time_EditText"
                                android:layout_weight="1.3"
                                android:numeric="decimal" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="元/小时" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:gravity="center_horizontal"
                                android:text="超出时间     "
                                android:textColor="@color/black"
                                android:textSize="11dp" />

                            <EditText
                                android:id="@+id/id_getimage_parkovertime"
                                style="@style/getimage_time_EditText"
                                android:layout_weight="1.3"
                                android:numeric="integer" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="元/小时" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:gravity="center"
                                android:text="未进场"
                                android:textColor="@color/black"
                                android:textSize="13dp" />

                            <EditText
                                android:id="@+id/feeTypeSecMinuteOfActivite"
                                style="@style/getimage_time_EditText"
                                android:layout_weight="0.6"
                                android:numeric="integer"
                                android:text="" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1.7"
                                android:gravity="center_vertical"
                                android:text="分钟后过期" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:id="@+id/payradioButton2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:checked="false"
                                android:text="  计次收费"
                                android:textSize="11sp" />

                            <EditText
                                android:id="@+id/id_getimage_paynomal"
                                style="@style/getimage_time_EditText"
                                android:layout_weight="1.3"
                                android:numeric="decimal" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="元/次" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:gravity="center"
                                android:text="未进场"
                                android:textColor="@color/black"
                                android:textSize="13dp" />

                            <EditText
                                android:id="@+id/feeTypeFixedMinuteOfInActivite"
                                style="@style/getimage_time_EditText"
                                android:layout_weight="0.6"
                                android:numeric="integer"
                                android:text="" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1.7"
                                android:gravity="center_vertical"
                                android:text="分钟后过期" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal" >

                            <CheckBox
                                android:id="@+id/DaypayradioButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:text="  全天优惠"
                                android:textSize="11sp" />

                            <EditText
                                android:id="@+id/id_getimage_daypay"
                                style="@style/getimage_time_EditText"
                                android:layout_weight="1.3"
                                android:numeric="decimal" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="元/小时" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal" >

                            <CheckBox
                                android:id="@+id/DaytimeradioButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:text="  优惠时段"
                                android:textSize="11sp" />

                            <EditText
                                android:id="@+id/id_getimage_daytimepay"
                                style="@style/getimage_time_EditText"
                                android:layout_weight="1.3"
                                android:numeric="decimal" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="元/小时" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/id_getimage_startime"
                                style="@style/getimage_time_EditText"
                                android:layout_weight="1.2"
                                android:drawableLeft="@drawable/timebim"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:text="—" />

                            <TextView
                                android:id="@+id/id_getimage_endtime"
                                style="@style/getimage_time_EditText"
                                android:layout_weight="1.2"
                                android:drawableLeft="@drawable/timebim"
                                android:gravity="center" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/add_parkinfo_modefybtn"
                            style="@style/accountButtonStyle"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_margin="3dp"
                            android:background="@drawable/btn_add_accounts"
                            android:gravity="center"
                            android:text="提交" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </com.mc.parking.client.layout.VerticalScrollView>
    </RelativeLayout>

</RelativeLayout>