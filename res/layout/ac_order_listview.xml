  <LinearLayout
        android:id="@+id/indicator_line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
         >

        <RelativeLayout
            android:id="@+id/indicator_first"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

              android:background="@drawable/bg_tab_blue" >

            <TextView
                android:id="@+id/baseviewpage_numb1"
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/badge_a"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/gray_white"
                android:textSize="11dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/baseviewpage_tv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="未付费"
                android:textColor="@color/gray"
              
                android:textSize="16sp" />
        </RelativeLayout>

        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="13dp"
            android:background="@color/mainbg"
            />
         <RelativeLayout
            android:id="@+id/indicator_second"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white" >

            <TextView
                android:id="@+id/baseviewpage_numb2"
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/badge_a"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/gray_white"
                android:textSize="11dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/baseviewpage_tv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="已付费"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </RelativeLayout>

        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="13dp"
            android:background="@color/mainbg"
            />
        
        <RelativeLayout
            android:id="@+id/indicator_thrid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white" >

            <TextView
                android:id="@+id/baseviewpage_numb3"
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="38dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/badge_a"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/gray_white"
                android:textSize="11dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/baseviewpage_tv3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="已完成"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>


     <android.support.v4.view.ViewPager
