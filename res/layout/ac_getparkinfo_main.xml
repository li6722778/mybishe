<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
     >

   <!--  <fragment
        android:id="@+id/getpark_fragment_topbar"
        android:name="com.mc.parking.client.ui.fragment.TopBarFragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" /> -->

     <fragment 
         android:id="@+id/addimage_fragment"
         android:name="com.mc.parking.client.ui.admin.AddParkImageFragment"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="2.5"
         />

        <fragment
            android:id="@+id/getpark_fragment_map"
            android:name="com.mc.parking.client.ui.admin.GetParkInfoMapFragment"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            
             />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="horizontal" >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    
    >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
             android:orientation="horizontal"
             android:id="@+id/id_getpark_admin_lay1"
        >
         <Button
                android:id="@+id/id_getpark_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/btn_quick_register"
                android:text="保存"
                android:textColor="@color/mainbg"
                android:textSize="16dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/id_getpark_ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btn_add_accounts"
                android:text="提交"
                android:textColor="@color/mainbg"
                android:textSize="16dp"
                android:visibility="visible" />
        
    </LinearLayout>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
             android:orientation="horizontal"
             android:id="@+id/id_getpark_admin_lay2"
             android:visibility="gone"
        >
         <Button
                android:id="@+id/id_getpark_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/btn_quick_register"
                android:text="关闭"
                android:textColor="@color/mainbg"
                android:textSize="16dp"
                android:visibility="visible" />

          
    </LinearLayout>
    
</RelativeLayout>
            
            
        </LinearLayout>

            
    

</LinearLayout>