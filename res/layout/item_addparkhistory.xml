    <ImageView
        android:id="@+id/addhistory_img"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"
        android:src="@drawable/imglistdemo"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:id="@+id/order_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/maptitlebtn"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:padding="10dp"
        android:src="@drawable/delete_24"
        
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/addhistory_img"
    
        android:orientation="vertical"
        android:padding="10dp"
         >

        <TextView
            android:id="@+id/parkname_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:text="订单号"
            android:textColor="@color/listdarkfont"
            android:textSize="16sp" />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
             <TextView
            android:id="@+id/history_item_startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
          android:layout_marginTop="5dp"
            android:text="2015-12-12"
            android:textColor="@color/grey"
            android:textSize="12sp" />
            
            
            
        </LinearLayout>

       
    </LinearLayout>

</RelativeLayout>